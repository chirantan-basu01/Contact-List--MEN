<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%=locals.title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
      integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk"
      crossorigin="anonymous"
    />
    <!-- css files should be below all other styles so that we can override it-->
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <h1 id="page-heading">
      <i class="fas fa-address-book"></i>
      My Contacts List
    </h1>

    <div class="card contact" style="width: 18rem">
      <ul class="list-group list-group-flush">
        <%for(let i of contact_list) { %>
        <li class="list-group-item">
          <div>
            <p><%=i.name%></p>
            <p><%=i.phone%></p>
          </div>
          <div class="delete-button">
            <a href="/delete-contact/?phone=<%= i.phone%>">
              <i class="fas fa-window-close"></i>
            </a>
          </div>
        </li>
        <% }%>
      </ul>
    </div>

    <form method="post" action="/create-contact">
      <div class="row" style="margin-left: 120px">
        <div class="col">
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="Enter your name"
            required
          />
        </div>
        <div class="col">
          <input
            class="form-control"
            type="number"
            name="phone"
            placeholder="Enter phone number"
            required
          />
        </div>
        <div class="col">
          <button type="submit button" class="btn btn-warning">
            Add Contact
          </button>
        </div>
      </div>
    </form>
    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>
